{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017",
      "webworker"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "resolveJsonModule": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
        "Api": ["src/api/"],
        "Audio": ["src/audio/"],
        "Images": ["src/images/"],
        "Components": ["src/components/"],
        "Configs": ["src/configs/"],
        "Utils": ["src/utils/"],
        "Pages": ["src/pages/"],
        "Store": ["src/store/"],
        "Mocks": ["src/mocks/"],
        "Types": ["src/types/"],
        "Services": ["src/services/"],
        "Selectors": ["src/selectors/"],
        "Hooks": ["src/hooks"],
        "*": ["src/*"]
    },
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"]
  },
  "include": [
    "./src",
    "typings/**/*.d.ts",
    "./node_modules/@types"
  ],
  "exclude": [
    "**/*.js"
  ]
}
