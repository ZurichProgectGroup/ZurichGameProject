{
    "compilerOptions": {
        "target": "ESNext",
        "baseUrl": ".",
        "outDir": "./dist",
        "module": "commonjs",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true

    },
    "types": [
      "node"
    ],
    "linterOptions": {
        "exclude": ["../node_modules/**"]
    },
    "include": [
        "./src/app.ts"
    ],
    "exclude": [
        "../node_modules"
    ]
}
